{
	"manifest_version": 2,
	"name": "Comic grabber",
	"version": "1.0.5",
	"description": "This extension watches loaded images and serves the downloading function of them. (specialized for some sites)",
	"author": "Isitea",
	"icons": {
		"128": "resources/icon-128.png"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"downloads",
		"storage",
		"<all_urls>"
	],
	"web_accessible_resources": [
		"*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"scripts/loader.js"
			],
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"background": {
		"page": "backend/beholder.html"
	},
	"content_security_policy": "default-src 'self' blob: chrome-extension-resource: https://cdnjs.cloudflare.com/;",
	"minimum_chrome_version": "61"
}